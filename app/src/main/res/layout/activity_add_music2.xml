<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/edt_ten_ca_si"
        android:layout_margin="10dp"
        android:hint="@string/nh_p_t_n"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edt_bai_hat"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="@string/nh_p_b_i_h_t"
        app:layout_constraintStart_toStartOf="@+id/ten_ca_si"
        app:layout_constraintTop_toBottomOf="@+id/edt_ten_ca_si"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/btnLuu"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:text="@string/l_u"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_bai_hat"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>